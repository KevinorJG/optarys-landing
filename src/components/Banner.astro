---
import bg from "../assets/background.svg";
import hero from "../assets/astro.svg";

export interface Props {
	title?: string;
	subtitle?: string;
	primaryLabel?: string;
	primaryHref?: string;
	secondaryLabel?: string;
	secondaryHref?: string;
}

const {
	title = "Impulsa tu proyecto con soluciones digitales",
	subtitle = "Dise√±o, desarrollo y estrategia para escalar tu producto.",
	primaryLabel = "Comenzar",
	primaryHref = "/contact",
	secondaryLabel = "Nuestros servicios",
	secondaryHref = "/services",
} = Astro.props as Props;
---

<section class="banner section" aria-label="Hero banner">
	<div class="container banner-inner">
		<div class="container banner-content">
			<p class="eyebrow">Soluciones digitales</p>
			<h1 class="title">{title}</h1>
			<p class="subtitle">{subtitle}</p>

			<div class="actions">
				<a class="btn btn-primary" href={primaryHref}>{primaryLabel}</a>
				<a class="btn btn-secondary" href={secondaryHref}>{secondaryLabel}</a>
			</div>
		</div>

		<div class="banner-visual">
			<img class="bg" src={bg.src} alt="background decoration" aria-hidden="true" />
			<img class="hero" src={hero.src} alt="Hero illustration" />
		</div>
	</div>
</section>

<style>
	.banner {
		padding: 3rem 1rem;
		background: linear-gradient(180deg, #f9fafb 0%, #ffffff 100%);
	}

	.banner-inner {
		max-width: 1100px;
		margin: 0 auto;
		display: flex;
		gap: 2rem;
		align-items: center;
		justify-content: space-between;
	}

	.banner-content {
		flex: 1 1 50%;
	}

	.eyebrow {
		margin: 0 0 0.5rem 0;
		color: #10b981;
		font-weight: 600;
		letter-spacing: 0.02em;
	}

	.title {
		margin: 0 0 1rem 0;
		font-size: 2rem;
		line-height: 1.1;
		color: #0f172a;
	}

	.subtitle {
		margin: 0 0 1.25rem 0;
		color: #475569;
		max-width: 46rem;
	}

	.actions {
		display: flex;
		gap: 0.75rem;
		align-items: center;
	}

	.btn {
		display: inline-block;
		padding: 0.6rem 1rem;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		box-sizing: border-box;
	}

	.btn-primary {
		background: #0ea5a4;
		color: #fff;
		border: 2px solid transparent;
		transition: background-color 150ms ease, border-color 150ms ease, color 150ms ease;
	}

	.btn-primary:hover {
		background: #08958f;
	}

	.btn-secondary {
		background: transparent;
		color: #0f172a;
		border: 2px solid rgba(15,23,42,0.08);
	}

	.btn-secondary:hover {
		background: rgba(15,23,42,0.03);
	}

	.banner-visual {
		flex: 1 1 40%;
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.banner-visual .bg {
		position: absolute;
		inset: 0 auto 0 0;
		width: 160%;
		max-width: 720px;
		opacity: 0.08;
		transform: translateX(8%);
		pointer-events: none;
	}

	.banner-visual .hero {
		position: relative;
		width: clamp(220px, 35vw, 420px);
		height: auto;
	}

	@media (max-width: 880px) {
		.banner-inner {
			flex-direction: column-reverse;
			text-align: center;
		}

		.banner-visual { order: -1; }

		.banner-content { width: 100%; }

		.btn { width: auto; }
	}

</style>

