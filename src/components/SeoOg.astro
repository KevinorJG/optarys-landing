---
export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  image?: string;
  url?: string;
}

const {
  title = "Optarys",
  description = "Optarys — Soluciones digitales, desarrollo moderno y experiencias optimizadas para tu negocio.",
  canonical = "https://optarys.com",
  image = "https://optarys.com/og-image.jpg",
  url = canonical,
} = Astro.props;
---

<!-- SEO Básico -->
<meta name="description" content={description} />
<meta name="robots" content="index, follow" />
<link rel="canonical" href={canonical} />

<!-- OpenGraph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={url} />
<meta property="og:image" content={image} />
<meta property="og:locale" content="es_ES" />

<!-- Twitter Cards -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={image} />

<!-- Extra SEO -->
<meta name="theme-color" content="#65fd08" />
<meta name="author" content="Optarys" />

<!-- JSON-LD: Organization + WebSite -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "Organization",
        "name": "Optarys",
        "url": "https://optarys.com",
        "logo": "https://optarys.com/og-image.jpg",
        "sameAs": [
          "https://www.facebook.com/optarys",
          "https://www.twitter.com/optarys",
          "https://www.linkedin.com/company/optarys"
        ]
      },
      {
        "@type": "WebSite",
        "url": "https://optarys.com",
        "name": "Optarys"
      }
    ]
  }
</script>